{
  "name": "Ruby and Node.js",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "postStartCommand": "bundle exec jekyll serve --watch --force_polling --verbose --livereload",
  "runArgs": [ "-u", "node" ],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "ruby.lint": {
          "rubocop": {
            "useBundler": true
          }
        }
      },
      "extensions": [
        "shopify.ruby-lsp"
      ]
    }
  }
}

