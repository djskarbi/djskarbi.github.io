{
  "name": "Ruby and Node.js",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
  },
  "runArgs": [ "-u", "node" ],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "ruby.lint": {
      "rubocop": {
        "useBundler": true
      }
    }
  },
  "extensions": [
    "shopify.ruby-lsp"
  ]
}

